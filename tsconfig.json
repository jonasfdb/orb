{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    // "noEmit": true
  },
  "include": ["src", "helpers", "config.mjs", "orb.ts", "notes/setup.mjs"],
  "exclude": ["node_modules", "dist", "qr_storage"]
}